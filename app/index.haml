- var title = "MW Treasury"

!!! 5
%html(lang="en" ng-app="mwTreasuryApp")
  %head
    %meta(charset="utf-8")
    %title= title
    :each sheet in stylesheets
      %link(rel="stylesheet" href=sheet)
    :each script in scripts
      %script(src=script)

  %body(flow-prevent-drop='' ng-controller="BaseController")
    .ink-grid
      %header.clearfix.vertical-padding
        %h1.logo.xlarge-push-left.large-push-left= title
          %small.fw-500
            %a(ng-if="header.url" href="{{header.url}}") {{header.text}}
            {{header.url ? '' : header}}
        %nav.ink-navigation.xlarge-push-right.large-push-right.half-top-space
          %ul.menu.horizontal.black
            %li
              %a(href="#/plugins") Main page
            %li
              %a(href="#/categories") Categories
      %div(ng-view='')
      %footer.clearfix
        .ink-grid
          %ul.unstyled.inline.half-vertical-space
            %li
              %a(href="#") About
            %li
              %a(href="#") Sitemap
            %li
              %a(href="#") Contacts
          %p.note 2014. MW Treasury